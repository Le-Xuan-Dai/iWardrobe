@page
@model WebApplication.Pages.Shop.Orders.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Order.OrderId" />
            <div class="form-group">
                <label asp-for="Order.UserId" class="control-label"></label>
                <select asp-for="Order.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Order.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.ProductId" class="control-label"></label>
                <select asp-for="Order.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="Order.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.DeliverMethod" class="control-label"></label>
                <input asp-for="Order.DeliverMethod" class="form-control" />
                <span asp-validation-for="Order.DeliverMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.DeliverDetais" class="control-label"></label>
                <input asp-for="Order.DeliverDetais" class="form-control" />
                <span asp-validation-for="Order.DeliverDetais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.PaymentMethod" class="control-label"></label>
                <input asp-for="Order.PaymentMethod" class="form-control" />
                <span asp-validation-for="Order.PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.PaymentDetais" class="control-label"></label>
                <input asp-for="Order.PaymentDetais" class="form-control" />
                <span asp-validation-for="Order.PaymentDetais" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.OrderStatus" class="control-label"></label>
                <input asp-for="Order.OrderStatus" class="form-control" />
                <span asp-validation-for="Order.OrderStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order.Note" class="control-label"></label>
                <input asp-for="Order.Note" class="form-control" />
                <span asp-validation-for="Order.Note" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Order.IsDeleted" /> @Html.DisplayNameFor(model => model.Order.IsDeleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
