@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<style>
    .btnPagination {
        color: #152534;
    }

        .btnPagination:hover {
            color: #152534;
            background-color: #C0E862;
        }

    .cardTitle {
        line-height: 1.5rem;
        height: 3rem;
        overflow: hidden;
        display: -webkit-box;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 2;
    }
</style>

<div class="container">
    <form asp-page="./Index" method="get">
        <div class="form-actions no-color row">
            <div class="mx-auto mb-4 col-12 col-md-8 col-xl-6">
                <div class="input-group border rounded-3">
                    <input class="form-control searchInput" style="border: none;" type="search" placeholder="Seach product..." name="SearchString" value="@Model.CurrentFilter">
                    <span class="input-group-append" style="margin-left: unset;">
                        <button class="btn" style="background-color:#C0E862;" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </form>

    <div class="row row-cols-1 row-cols-md-2 row-cols-xl-3 gy-4 d-flex justify-content-center justify-content-lg-start">
        @foreach (var item in Model.Products)
        {
            <div class="col d-flex align-items-center justify-content-center">
                <div class="card rounded-4 p-3 position-relative" style="width: 20rem;">
                    <img class="rounded-4 card-img-top" style="min-width: 17.875rem; min-height: 17.875rem;"
                         src=@item.ImageUrls[0]
                         alt="..." loading="lazy">
                    <div class="card-body">
                        <p class="card-subtitle" style="color: #A1A1A1;">lxdfasion</p>
                        <h5 class="card-title cardTitle">@item.ProductName</h5>
                        <div class="d-flex justify-content-between">
                            <div>
                                <span><i class="fa fa-money" aria-hidden="true"></i>&nbsp;Buy </span>
                                <p style="font-weight: bold; color: #C0E862;">(đ)@item.SellPrice</p>
                            </div>
                            <div style="text-align: end;">
                                <span><i class="fa fa-retweet" aria-hidden="true"></i>&nbsp;Rent </span>
                                <p style="font-weight: bold; color: #C0E862;">(đ)@item.RentPrice</p>
                            </div>
                        </div>
                        <a asp-page="/Products/Details" asp-route-id="@item.ProductId"
                           style="background-color:#C0E862;"
                           type="button"
                           class="btn w-100">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                            &nbsp;View Details
                        </a>
                    </div>
                    <button class="rounded-circle d-flex align-items-center justify-content-center btn btn-outline-danger position-absolute"
                            style="width: 32px; height: 32px; border: none; right: 1.5rem; top: 1.5rem;">
                        <i class="fa fa-heart-o" aria-hidden="true"></i>
                    </button>
                </div>
            </div>
        }

    </div>
    @{
        var prevDisabled = !Model.Products.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.Products.HasNextPage ? "disabled" : "";
    }
    <div class="d-flex align-items-center justify-content-center mt-4">
        <a asp-page="./Index"
           asp-route-pageIndex="@(Model.Products.PageIndex - 1)"
           class="btnPagination btn btn-outline-secondary btn-sm @prevDisabled"
           style="width: 100px;border: none;">
            <i class="fa fa-long-arrow-left" aria-hidden="true"></i>
            &nbsp;Previous
        </a>
        <a asp-page="./Index"
           asp-route-pageIndex="@(Model.Products.PageIndex + 1)"
           class="btnPagination btn btn-outline-secondary btn-sm @nextDisabled"
           style="width: 100px;border: none;">
            Next&nbsp;
            <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
        </a>
    </div>
</div>
