@using BusinessObjects;
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <div class="d-flex justify-content-center align-items-center text-center">
        <button class="rounded-circle d-flex align-items-center justify-content-center btn btn-outline-light"
                style="width: 32px; height: 32px; border: none; right: 1.5rem; top: 1.5rem;">
            <i class="fa-solid fa-cart-shopping"></i>
        </button>
        <button class="rounded-circle d-flex align-items-center justify-content-center btn btn-outline-light"
                style="width: 32px; height: 32px; border: none; right: 1.5rem; top: 1.5rem;">
            <i class="fa-solid fa-bell"></i>
        </button>
        <div class="dropdown dropleft">
            <button data-bs-toggle="dropdown" class="rounded-circle d-flex align-items-center justify-content-center btn btn-outline-light"
                    style="width: 32px; height: 32px; border: none; right: 1.5rem; top: 1.5rem;">
                <i class="fa-solid fa-user"></i>
            </button>
            <ul class="dropdown-menu text-small shadow dropdown-menu-lg-end">
                <li>
                    <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                        <i class="fa-solid fa-user"></i>&nbsp;&nbsp;
                        Profile
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-page="/RegisterSeller">
                        <i class="fa-regular fa-square-plus"></i>&nbsp;&nbsp;
                        Create wardrobe
                    </a>
                </li>
                <li><hr class="dropdown-divider" /></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="dropdown-item">
                            <i class="fa-solid fa-right-from-bracket"></i>&nbsp;&nbsp;
                            Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
    @* <li class="nav-item">
    <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index">@UserManager.GetUserName(User)</a>
    </li>
    <li class="nav-item">
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
    </form>
    </li>*@
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-page="/Index" asp-route-type="signup">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-white" asp-area="" asp-page="/Index">Login</a>
        </li>
    </ul>

}

