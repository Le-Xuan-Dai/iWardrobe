@page
@model WebApplication.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Index";
}

<style>
    .iconAction {
        width: 2rem;
        height: 2rem;
    }
</style>

<div class="container">
    <h1>Index</h1>

    <p>
        <a asp-page="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th style="background-color: #C0E862;">
                    @Html.DisplayNameFor(model => model.Category[0].CategoryName)
                </th>
                <th style="background-color: #C0E862;">
                    @Html.DisplayNameFor(model => model.Category[0].User)
                </th>
                <th style="background-color: #C0E862;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Category)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CategoryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.Id)
                    </td>
                    <td>
                        <div class="h-100 d-flex align-items-center justify-content-center">
                            <a class="btn btn-sm btn-success rounded-circle mx-1 iconAction" asp-page="./Edit" asp-route-id="@item.CategoryId">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-warning rounded-circle mx-1 iconAction" asp-page="./Details" asp-route-id="@item.CategoryId">
                                <i class="fa fa-info " aria-hidden="true"></i>
                            </a>
                            <a class="btn btn-sm btn-danger rounded-circle mx-1 iconAction"
                               type="submit" asp-page="./Delete" asp-route-id="@item.CategoryId">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </a>
                        </div>
                     @*   <a asp-page="./Edit" asp-route-id="@item.CategoryId">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.CategoryId">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.CategoryId">Delete</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

