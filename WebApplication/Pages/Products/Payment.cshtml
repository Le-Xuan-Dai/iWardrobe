@page "/Payment"
@model WebApplication.Pages.Cart_Payment.PaymentModel
@{
    ViewData["Title"] = "Payment";
}
<style>
    .item-wrapper {
        display: block;
    }

    .item-infor {
        border: 2px solid black;
        border-bottom-right-radius: 15px;
        border-bottom-left-radius: 15px;
        padding: 15px;
        height: auto;
    }

    .item-infor--wrapper {
        border-bottom: 2px solid black;
        padding: 10px;
    }

    .modal-header {
        border-bottom: 2px solid rgb(154 205 50);
    }

    .modal-title {
        font-size: 1.5rem;
        padding: 10px;
    }

    .voucher-wrapper {
        z-index: 6;
        border-radius: 10px;
        background-color: white;
        border-radius: 10px;
        border: 2px solid #333;
        box-shadow: 1px 1px 6px 7px rgba(0, 13, 0, 0.4);
        width: 80%;
        height: 80%;
        top: 10%;
        left: 10%;
        text-align: center;
        position: fixed;
        /* Stay in place */
        padding: 50px;
        overflow-y: scroll;
        display: none;
    }

        .voucher-wrapper::-webkit-scrollbar {
            display: none;
        }

    .voucher-item {
        border: 2px solid black;
        padding: 10px;
        border-radius: 15px;
        background-color: white;
    }

    .payment-list {
        width: 50%;
        height: auto;
        border: 2px solid black;
        padding: 20px;
        position: relative;
    }

        .payment-list::before {
            content: "Payment Method";
            position: absolute;
            background-color: #fff;
            bottom: 80px;
        }

    .payment-item__method {
        width: 50px;
        height: 50px;
        padding: 2px;
        cursor: pointer;
    }

    .form-input {
        padding: 3px;
    }

    .form-input {
        border: none;
        border-bottom: 1px solid black;
        padding: 5px 10px;
        outline: none;
    }

    .btn-voucher {
        border-radius: 5px;
        padding: 5px;
    }

    [placeholder]:focus::-webkit-input-placeholder {
        transition: text-indent 0.4s 0.4s ease;
        text-indent: -100%;
        opacity: 1;
    }
</style>
    <div class="container">
        <div class="row mt-5 d-flex align-items-center flex-wrap">
            <div class="w-25 item-wrapper">
                <div class="row">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/0/09/T-shirt.jpg/1200px-T-shirt.jpg" alt="" class="d-block img-rounded rounded-3">
                </div>
                <div class="item-infor">
                    <div class="item-infor--wrapper m-2 d-flex">
                    <span class="item-label fw-bold" style="min-width:100px;">Name :</span>
                        <span class="item-name">@Html.DisplayFor(model => model.paymentCart.Product.ProductName)</span>
                    </div>
                    <div class="item-infor--wrapper m-2 d-flex">
                        <span class="item-label fw-bold" style="min-width:100px">Price :</span>
                    <span class="item-name">(đ) @Html.DisplayFor(model => model.paymentCart.Product.SellPrice )</span>
                    </div>
                    <div class="item-infor--wrapper m-2 d-flex">
                        <span class="item-label fw-bold" style="min-width:100px">Category :</span>
                        <span class="item-name"> @Html.DisplayFor(model => (model.paymentCart.Product.Category.CategoryName))</span>
                    </div>
                    <div class="item-infor--wrapper m-2 d-flex">
                        <span class="item-label fw-bold" style="min-width:100px">Quantity :</span>
                    <span class="item-name">@Html.DisplayFor(model => model.paymentCart.Quantity)</span>
                    </div>
                </div>
            </div>
            <div class="w-75" style="border:2px solid black;">
                <form method="post" style="margin:10px;">
                    <h3 class="form-title text-center">Order</h3>
                   
                    <div class="form-infor--wrapper d-flex mb-4">
                        <label for="owner_name" style="min-width:150px;">Delivery address: </label>
                        <input type="text" name="owner_name" placeholder="Your address .... " class="flex-grow-1 form-input" style="max-width:400px;">
                    </div>
                    <div class="form-infor--wrapper d-flex mb-4">
                        <label for="owner_name" style="min-width:150px;">Delivery method: </label>
                        <input type="text" name="owner_name" placeholder="Grab ... " class="flex-grow-1 form-input" style="max-width:400px;" asp-for="@Model.Order.DeliverMethod">
                    </div>
                    <div class="form-infor--wrapper d-flex  mb-4">
                        <label for="owner_name" style="min-width:150px;">Your name: </label>
                        <input type="text" name="owner_name" placeholder="Your name .... " class="flex-grow-1 form-input" style="max-width:400px;">
                    </div>
                    <div class="form-infor--wrapper">
                        <button type="button" class="btn-voucher mb-4 ">Apply voucher</button>
                        @if(Model.voucher == null){
                            <span style="margin-left:30px; ">No voucher have applied</span>
                        }else{
                            <span style="margin-left:30px; "> Voucher @Html.DisplayFor(model => model.voucher.VoucherName) has applied to your invoice</span>
                        }
                        <div class="row  h-100 position-relative vouchers">
                            <div class="voucher-wrapper">
                                <div class="modal-header">
                                    <h5 class=" voucher-title modal-title" id="exampleModalLabel">Apply your voucher</h5>
                                    <span aria-hidden="true" style="font-size:1.5rem; cursor:pointer; background-color:rgb(164, 165, 165); padding:10px;" class="btn-close"></span>
                                </div>
                                <div class="voucher-list d-flex justify-content-between flex-wrap mt-5">
                                    @if(Model.Voucher == null){
                                        <h5>You haven't any voucher'</h5>
                                    }else{
                                    @foreach (var item in Model.Voucher)
                                    {
                                        <div class="voucher-item col-5 d-flex justify-content-around align-items-center ">
                                            <img src="https://product.hstatic.net/1000008082/product/gift-voucher-200k_839a834d702545529312398fd61f76d7_grande.png"
                                         class="img-rounded rounded-3 voucher-item__image" alt="voucher" style="width:100px" />
                                            <div class="voucher-item__info w-200">
                                                <p class="voucher-item__info-title text-left">@Html.DisplayFor(model => model.voucher.VoucherName)</p>
                                                <p class="voucher-item__info-title text-left">Discount @Html.DisplayFor(model => model.voucher.Value)%</p>
                                            </div>
                                            <form method="post">
                                                <input type="hidden" name="voucherId" value="@item.VoucherId" />
                                                <button type="submit" class="btn btn-primary">Apply</button>
                                            </form>
                                        </div>
                                    }
                                    }
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="payment-wrapper w-100 d-flex justify-content-center mb-4">
                        <div class="payment-list d-flex justify-content-around ">
                            <img src="data:image/png;base64,"
                                 alt="" class="payment-item__method chosen-payment">
                            <img src="https://cdn.haitrieu.com/wp-content/uploads/2022/10/Logo-ZaloPay-Square.png"
                                 alt="" class="payment-item__method">
                            <img src="https://i.pinimg.com/564x/73/39/7a/73397a1716e4907a07c954f21fdcb9d1.jpg"
                                 alt="" class="payment-item__method">
                        </div>
                    </div>
                <textarea name="note_for_seller" id="" cols="60" rows="5" placeholder="Note for seller ...." style="padding:10px;"asp-for="@Model.Order.Note"></textarea>
                    </br>
                    <div class="form-infor--wrapper d-flex  mb-4 justify-content-between mt-3">
                        <button  class="btn btn-primary ">
                            <a href="../Pages/Products/Index" style="color:white;text-decoration:none;">Back to shopping</a>
                        </button>
                    <button type="submit" class="btn btn-primary " asp-page-handler="PurchaseItem">Continue purcharse</button>
                    </div>
                </form>
            <div class="modal fade" id="ignismyModal" role="dialog">
                <div class="modal-dialog">
                    <div class="modal-content">

                        <div class="modal-body">
                            <div class="thank-you-pop">
                                <img src="http://goactionstations.co.uk/wp-content/uploads/2017/03/Green-Round-Tick.png" alt="">
                                <h1>Thank You!</h1>
                                <p>Your submission is received and we will contact you soon</p>
                                <h3 class="cupon-pop">Your Id: <span>12345</span></h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
    <script src="~/js/Payment.js"></script>