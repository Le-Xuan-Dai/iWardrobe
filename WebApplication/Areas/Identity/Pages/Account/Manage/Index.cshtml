@page "/profile"
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }

    @@media (min-width: 768px) {
        .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }
    }
</style>



<div class="py-2 rounded">
    <partial name="_StatusMessage" model="Model.StatusMessage" />
    <div class="text-center">
        <img src="/img/avatar.png"
             alt=""
             width="200"
             height="200"
             class="rounded-circle me-2" />
    </div>
    <div class="container-fluid d-flex flex-column px-5 text-dark">
        <form method="post">
            <h5>Personal</h5>
            <div class="row">
                <div class="col">
                    <div class="mb-lg-3">
                        <label class="mb-lg-1">Full name</label>
                        <input asp-for="Input.Fullname" class="form-control w-100" />
                        <span asp-validation-for="Input.Fullname" class="text-danger"></span>
                    </div>
                    <div class="mb-lg-3">
                        <label class="mb-lg-1" for="brandName">Brand name</label>
                        <input asp-for="Input.BrandName" class="form-control w-100" />
                        <span asp-validation-for="Input.BrandName" class="text-danger"></span>
                    </div>
                    @* <div class="mb-lg-3">
                    <label class="mb-lg-1" for="dob">Date of birth</label>
                    <input class="form-control w-100"
                    type="date"
                    name="dob"
                    value=""
                    placeholder="Enter Value"
                    required />
                    </div>*@
                    <div class="mb-lg-3">
                        <label class="mb-lg-1" for="idCode">Identification Code</label>
                        <input asp-for="Input.IdentificationCode" class="form-control w-100" />
                        <span asp-validation-for="Input.IdentificationCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="col">
                    <div class="mb-lg-3">
                        <label class="mb-lg-1" for="phone">Phone number</label>
                        <input asp-for="Input.PhoneNumber" class="form-control w-100" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="mb-lg-3">
                        <label class="mb-lg-1" for="address">Address</label>
                        <input asp-for="Input.Address" class="form-control w-100" />
                        <span asp-validation-for="Input.Address" class="text-danger"></span>
                    </div>

                </div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn" style="background-color:#C0E862;">
                    <i class="fa fa-paper-plane" aria-hidden="true"></i>&nbsp;
                    Submit
                </button>
            </div>
        </form>
    </div>
</div>

